{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "./src",
    "target": "es2017",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": false,
    "strict": true,
    "lib": ["es6", "esnext.asynciterable"],
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "lib"
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
